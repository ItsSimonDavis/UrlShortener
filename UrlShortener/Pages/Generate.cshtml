@page
@model GenerateModel
@{
    ViewData["Title"] = "Generate page";
}

<div>
    <h1 class="display-4">Short Link Generator</h1>
    <form method="post" class="form-horizontal">
        <div class="form-group">
            <label for="LongUrl" class="col-sm-2 control-label">Url To Shorten:</label>
            <div class="col-sm-10">
                <input type="url" asp-for="LongUrl" class="form-control" data-val-required="Url To Shorten is required." placeholder="https://examplelink.com" pattern="https://.*" />
                <span asp-validation-for="LongUrl" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label for="ShortUrl" class="col-sm-2 control-label">Shortended Url:</label>
            <div class="col-sm-10">
                <input type="url" asp-for="ShortUrl" class="form-control" disabled />
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-1">Generate</button>
    </form>
</div>


@section scripts {
    <partial name="_ValidationScriptsPartial" />
}